{
	"name": "babylonjs-editor-tools",
	"version": "5.2.4",
	"description": "Babylon.js Editor Tools is a set of tools to help you create, edit and manage your Babylon.js scenes made using the Babylon.js Editor",
	"productName": "Babylon.js Editor Tools",
	"scripts": {
		"build": "tsc -p . && node esbuild.mjs",
		"watch": "concurrently \"tsc -p . --watch\" \"node esbuild.mjs --watch\" -c bgYellow.bold,bgBlue.bold --names tools-ts,editor-dependencies",
		"test": "vitest run",
		"watch-test": "vitest --watch",
		"coverage": "vitest run --coverage"
	},
	"main": "build/index.js",
	"exports": {
		".": {
			"types": "./declaration/src/index.d.ts",
			"import": "./build/src/index.js",
			"require": "./build/index.node.js"
		},
		"./*": {
			"types": "./declaration/src/*.d.ts",
			"import": "./build/src/*.js"
		}
	},
	"typings": "declaration/src/index.d.ts",
	"license": "(Apache-2.0)",
	"devDependencies": {
		"@babylonjs/addons": "8.41.0",
		"@babylonjs/core": "8.41.0",
		"@babylonjs/gui": "8.41.0",
		"@vitest/coverage-v8": "4.0.13",
		"esbuild": "0.25.5",
		"typescript": "5.8.3",
		"vitest": "4.0.13"
	},
	"dependencies": {}
}
