{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "outDir": "./build/src",
    "declarationDir": "./declaration/src",
    "typeRoots": [
      "node_modules/@types"
    ],
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "types": [
      "es6-promise",
      "w2ui",
      "jquery",
      "socket.io-client",
      "jstree",
      "monaco-editor",
    ],
    "lib": [
      "es2015.promise",
      "es2015",
      "dom"
    ]
  },
  "exclude": [
    "./test",
    "./node_modules",
    "./build",
    "./declaration",
    "./index.d.ts",
    "./babylonjs-editor-extensions.d.ts",
    "electron",
    "electron-packages",
    "vscode-extension",
    "photoshop-extension",
    "assets"
  ]
}
