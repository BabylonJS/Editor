{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Bundle",
            "program": "${workspaceFolder}/script/electron.js",
            "args": [
                "--osx"
            ]
        },
        {
            "name": "Launch (source maps)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:1338/index.html",
            "webRoot": "${workspaceRoot}/",
            "sourceMaps": true,
            "userDataDir": "${workspaceRoot}/.tempChromeProfileForDebug"
        },
        {
            "name": "Launch (without source maps)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:1338/index.html",
            "webRoot": "${workspaceRoot}/",
            "sourceMaps": false,
            "userDataDir": "${workspaceRoot}/.tempChromeProfileForDebug"
        },
        {
            "name": "Electron Web",
            "type": "chrome",
            "request": "launch",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
            "windows": {
                "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
            },
            "runtimeArgs": [
                "${workspaceRoot}",
                "--enable-logging",
                "--remote-debugging-port=9222"
            ],
            "port": 9222,
            "webRoot": "${workspaceRoot}/",
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "userDataDir": "${workspaceRoot}/.tempChromeProfileForDebug"
        },
        {
            "name": "Electron Server",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
            "windows": {
                "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
            },
            "args": [
                "."
            ],
            "sourceMaps": false,
            "protocol": "legacy"
        }
    ]
}